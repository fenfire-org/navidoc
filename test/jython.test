def test_jython_locale_IO_bug():
	"""Test Jython's file I/O with umlauts.
	
	fail: *
	"""
	foo = open('tmp', 'w')
	foo.write('едц')
	foo.close()

	foo = open('tmp', 'r')
	bar = foo.read()
	foo.close()

	assert bar == 'едц', 'After open.write.read %s != %s.' % (bar, 'едц')
